<div class="flex flex-column pa2 pa5-ns fill-viewport bg {{backgroundColor}}">
  <div class="flex flex-column">
    
    <p class="f2 f-subheadline-ns lh-solid-ns ma0 measure heebo" id="quote-text">
      <span class="o-70">Design is</span><br>
      {{liquid-bind randomQuote.text class="heebo f2 f-subheadline-ns lh-solid-ns "}}
    </p>

    <a href="{{randomQuote.link}}" target=_blank class="white plex link sans-serif mt4 f3 ttu" id="cite">
      &mdash; {{randomQuote.cite}}
    </a>
  </div>

  <div class="flex-auto"></div>
</div>

<button {{action 'shuffleQuotes'}} class="fixed bottom-2 right-2 bg {{backgroundColor}} br-100 white ba0 h3 w3 plex b--transparent outline-0 shadow-outer-1">
  <img src="https://icon.now.sh/shuffle/48/fff" alt="">
</button>